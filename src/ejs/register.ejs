<!-- Сообщаем браузеру как стоит обрабатывать эту страницу -->
<!DOCTYPE html>
<!-- Оболочка документа, указываем язык содержимого -->
<html lang="ru">
    <!-- Заголовок страницы, контейнер для других важных данных (не отображается) -->
    <head>
        <!-- Заголовок страницы в браузере -->
        <title>Films finder</title>
        <!-- Подключаем CSS -->
        <link rel="stylesheet" href="/src/styles/register.css" />
        <link rel="shortcut icon" href="/src/icons/logo.svg" type="image/svg">
        
        <!-- Кодировка страницы -->
        <meta charset="UTF-8" />

    </head>
    <body>
        <div class="container">	   
            <div class="wrapper">
                <div id="register" class="animate form">
                    <form  action="register" autocomplete="off" method="POST"> 
                   
                         <%= error_messages %>
                            <input id="username" name="username" required="required" type="text" placeholder="  Логин" />
                               
                            <input id="password" name="password" required="required" type="password" placeholder="  Пароль"/>
                       
                          
                            <input id="password_confirm" name="password_confirm" required="required" type="password" placeholder="  Повторите пароль"/>  
                       
							<input id="log" type="submit" value="Зарегистрироваться"/> 
					
                        <p class="change_link">  
							Есть аккаунт?
							<a href="login" class="to_register"> Войти </a>
						</p>
                    </form>
                </div>	
            </div>   
        </div>
        
    </body>
</html>