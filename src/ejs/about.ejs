<!-- Сообщаем браузеру как стоит обрабатывать эту страницу -->
<!DOCTYPE html>
<!-- Оболочка документа, указываем язык содержимого -->
<html lang="ru">
	<!-- Заголовок страницы, контейнер для других важных данных (не отображается) -->
	<head>
		<!-- Заголовок страницы в браузере -->
		<title>Films finder</title>
		<!-- Подключаем CSS --><script src="https://kit.fontawesome.com/351720df19.js" crossorigin="anonymous"></script>
		<link rel="shortcut icon" href="src/icons/logo.svg" type="image/svg">
		<link rel="stylesheet" href="src/styles/about.css" />
		
		<!-- Кодировка страницы -->
		<meta http-equiv="Content-type" content="text/html; charset=UTF-8" />

	</head>
	<!-- Отображаемое тело страницы -->
	<body content="width=device-width , initial-scale=1, shrink-to-fit=no">
		<header class="header">
			<div class="header__list">							
			
				<a href="index" class="header__icon icon-header">
					<img src="/src/icons/logo.svg" width="50" height="50"></img></a>	

				 <% if ( user.role_id>0  ) { %>
				      <div class="addFilm">
				        <a href="addFilmPage" class="addFilm__ref">Добавить фильм</a>
				      </div>
			      <% } %>
    
				<div class="header__search">
					<form  action="searching" method="GET" >						
						<input   type="search" name="search"   placeholder=" Поиск...">
						<span  name="button" onclick="searchInput()">	
							 <img  src="/src/icons/search.svg" width="20" height="20">
						</span>
					</form>
				</div>

				
				<a class="header__profile">
					<p><%= user.login %></p>
					
					<a class="logOut" href="logOut" >Выйти</a>
					
				</a>
				
			</div>
		</header>
		<div class="container">
			<div class="side_bar">
				<ul>
				    <li>
				     	
				        <a href="index" ><img   src="/src/icons/home-page.svg" width="20" height="20">Главная</a> 
				    </li>
				    <li>
				   
				    	
				        <a href="watch" ><img  src="/src/icons/watch.svg" width="20" height="20">Посмотрю</a> 
				    </li>
				    <li>
				    
				    	
				        <a href="viewed" ><img  src="/src/icons/viewed.svg" width="20" height="20">Просмотрено</a> 
				    </li>
				    <li>
				    	
				       
				   
				        <a href="about" > <img  src="/src/icons/About.svg" width="20" height="20">О сервисе</a> 
				    </li>
				   
					</ul>
			</div>
			<div class="main">
				
				<div class="main__container">
					<div class="main__title">
						<img src="src/icons/logo.svg" width="80" height="80"></img>
						 <p>Films finder</p> 
					</div>
					<p class="main__mission">
						Наша цель – дать каждому возможность  менеджмента фильмов. 
					</p>
					<p class="main__opportunities">
						Кроме того, вы можете оценивать фильмы
					</p>
					<p class="main__opportunities">
						Находить других любителей фильмов
					</p>

				</div>
				<footer class="main__footer">
					<div class="content">
			<div class="help">			 	
			 	<a href="#" class="help__item">
			 		<i class="fas fa-envelope"></i>
			 		support@gmail.com
			 	</a>
			 	
			 </div>	
			 <div class="social">
			 	<a href="#" class="social__item">
			 		<i class="fab fa-facebook-f"></i>
			 	</a>
			 	<a href="#" class="social__item">
			 		<i class="fab fa-twitter"></i>
			 	</a>
			 	<a href="#" class="social__item">
			 		<i class="fab fa-pinterest-p"></i>
			 	</a>
			 	<a href="#" class="social__item">
			 		<i class="fab fa-instagram"></i>
			 	</a>
			 </div>

		</div>	 
				</footer>
			</div>
		</div>

		

		<script type="text/javascript">
				  
			 function change(elem,color) {

			//setTimeout(del, 500,elem);
			elem.classList.toggle("on");
			
		}

 			
		</script>

		<script src="/js/script.js" ></script>
	</body>
	
</html>